<?xml version="1.0" encoding="utf-8"?>
<GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="8"
    android:columnCount="4"
    android:background="#111"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:textColor="#fff"
        android:textSize="50sp"
        android:id="@+id/textView"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:textColor="#fff"
        android:textDirection="rtl"
        android:layout_row="1"
        android:layout_column="0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/buttonAllClear"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@color/material_deep_teal_500"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:id="@+id/buttonExchange"
        android:layout_row="2"
        android:layout_column="1"
        android:background="#666"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âˆš"
        android:id="@+id/buttonGen"
        android:layout_row="2"
        android:layout_column="2"
        android:background="#666"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:id="@+id/buttonMi"
        android:layout_row="2"
        android:layout_column="3"
        android:background="#666"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sin"
        android:id="@+id/buttonSin"
        android:layout_row="3"
        android:layout_column="0"
        android:background="#666"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cos"
        android:id="@+id/buttonCos"
        android:layout_row="3"
        android:layout_column="1"
        android:background="#666"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tan"
        android:id="@+id/buttonTan"
        android:layout_row="3"
        android:layout_column="2"
        android:background="#666"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/buttonDev"
        android:layout_row="3"
        android:layout_column="3"
        android:background="#ce9636"
        android:textColor="#fff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/buttonOne"
        android:layout_row="4"
        android:layout_column="0"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/buttonTwo"
        android:layout_row="4"
        android:layout_column="1"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/buttonThree"
        android:layout_row="4"
        android:layout_column="2"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/buttonMul"
        android:layout_row="4"
        android:layout_column="3"
        android:background="#ce9636"
        android:textColor="#fff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/buttonFour"
        android:layout_row="5"
        android:layout_column="0"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/buttonFive"
        android:layout_row="5"
        android:layout_column="1"
        android:background="@android:color/darker_gray" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/buttonSix"
        android:layout_row="5"
        android:layout_column="2"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/buttonMinus"
        android:layout_row="5"
        android:layout_column="3"
        android:background="#ce9636"
        android:textColor="#fff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/buttonSeven"
        android:layout_row="6"
        android:layout_column="0"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/buttonEight"
        android:layout_row="6"
        android:layout_column="1"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/buttonNine"
        android:layout_row="6"
        android:layout_column="2"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/buttonPlus"
        android:layout_row="6"
        android:layout_column="3"
        android:background="#ce9636"
        android:textColor="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="0"
        android:id="@+id/buttonZero"
        android:layout_columnSpan="2"
        android:layout_row="7"
        android:layout_column="0"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/buttonPoint"
        android:layout_row="7"
        android:layout_column="2"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:text="="
        android:id="@+id/buttonEqual"
        android:layout_row="7"
        android:layout_column="3"
        android:background="@android:color/holo_green_light"
        android:textColor="#fff"
        />

</GridLayout >